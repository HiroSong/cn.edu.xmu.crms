<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.xmu.crms.dao.EduClassDao" >

    <select id="selectEduClassByClassID"  resultType="EduClass" parameterType="BigInteger">
        SELECT * FROM class WHERE id = #{id}
    </select>

    <select id="selectEduClassIDByCourseID"  resultType="BigInteger" parameterType="BigInteger">
        SELECT class_id FROM course_class WHERE course_id = #{id}
    </select>
</mapper>
